{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "strictPropertyInitialization": false,
    // Modules
    "module": "commonjs",
    "baseUrl": "./",
    // Emit
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    // Language And Environment
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    // Projects
    "incremental": true,
    // Completeness
    "skipLibCheck": true
  }
}
